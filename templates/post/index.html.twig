{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <ul>
        {% for post in posts %}
            <li><a href="{{ path('post_show', {'id' : post.id }) }}">{{ post.title }}</a></li>
        {% else %}
            <li>Pas de Posts</li>
        {% endfor %}
    </ul>

{% endblock %}